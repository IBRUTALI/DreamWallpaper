<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamWallpaper.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackLite_200</item>
        <item name="colorPrimaryVariant">@color/white_lite</item>
        <item name="colorOnPrimary">#D6D6D6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Action bar. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blackLite_200</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.DreamWallpaper.ActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackLite_200</item>
        <item name="colorPrimaryVariant">@color/white_lite</item>
        <item name="colorOnPrimary">#D6D6D6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Action bar. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blackLite_200</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Alert dialog. -->
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
    </style>
</resources>
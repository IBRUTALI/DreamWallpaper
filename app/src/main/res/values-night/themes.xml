<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamWallpaper.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackLite_200</item>
        <item name="colorPrimaryVariant">@color/white_lite</item>
        <item name="colorOnPrimary">#D6D6D6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">#673AB7</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- background you can change some other color than white -->
        <item name="android:background">@color/blackLite_200</item>
        <!-- change if you want below -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DreamWallpaper.ActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackLite_200</item>
        <item name="colorPrimaryVariant">@color/white_lite</item>
        <item name="colorOnPrimary">#D6D6D6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
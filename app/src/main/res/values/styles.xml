<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbarStyle" parent="CustomToolbarStyle.Base"/>

    <style name="CustomToolbarStyle.Base" parent="">
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CustomToolbarStyle.Event" parent="CustomToolbarStyle">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/tt_norms_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- background you can change some other color than white -->
        <item name="android:background">@color/blackLite_200</item>
        <!-- change if you want below -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>